extends layout


block content

	link(rel='stylesheet', href='stylesheets/viewStyle.css')
	link(rel='stylesheet', href='libs/select2/select2.css')
	script(src='libs/jquery-ui-1.10.1.min.js')
	script(src='javascript/view.js')
	script(src='javascript/analyseconfig.js')
	script(src='libs/jquery.validate.min.js')
	script(src='libs/select2/select2.js')
		

	//if lte IE 8
		script(type='text/javascript', src='libs/mootools.js')
		script(type='text/javascript', src='libs/selectivizr.js')


	style(type='text/css')
		
		/* Custom container */
		.container-narrow {
		margin: 0 auto;
		max-width: 900px;
		}
		.container-narrow > hr {
		margin: 30px 0;
		}
		/* Main message and sign up button */
		.jumbotron {
		margin: 60px 0;
		text-align: center;
		}
		.jumbotron h1 {
		font-size: 72px;
		line-height: 1;
		}
		.jumbotron .btn {
		font-size: 21px;
		padding: 14px 24px;
		}
		.select {
		width: 300px;
		}

		/* style for validation form */
		#analyseConfig-form .fieldgroup label.error {
			color: #FB3A3A;
		}




	.container-narrow
		.jumbotron
			h1.page-title Configure your analysis
			br
			p.lead
				| Type specific URL(s) of the websites you would like to analyse, 
				| or an * (asterix) to browse collection of all previously analysed websites.
			

			form#analyseConfig-form
				#form-content
					fieldset
						.fieldgroup
							input.input-xxlarge.urls(type='text', name='urls', value='webmail.ulb.ac.be')
							br
						.fieldgroup
							br
							| Click on the input field below to pick analyse tools, multiple selections possible..
							br
							br
							select#pluginSelect.select(multiple='multiple', name='plugins')
								- each plugin in pluginsList
									option(value= plugin.id)= plugin.pluginName
							br
							br
						.fieldgroup
							br
							button.btn.btn-large.btn-primary Start Analysis &nbsp; &nbsp;
								i.icon-play.icon-white

			.pluginsAccordion#accordion
