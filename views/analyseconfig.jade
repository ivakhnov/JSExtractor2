extends layout


block content

	//- link(rel='stylesheet', href='stylesheets/normalize.css')
	link(rel='stylesheet', href='stylesheets/accordionStyle.css')
	link(rel='stylesheet', href='libs/select2/select2.css')
	script(src='libs/jquery-ui-1.10.1.min.js')
	script(src='javascript/analyseconfig.js')
	script(src='libs/select2/select2.js')
		

	//if lte IE 8
		script(type='text/javascript', src='libs/mootools.js')
		script(type='text/javascript', src='libs/selectivizr.js')


	style(type='text/css')
		
		/* Custom container */
		.container-narrow {
		margin: 0 auto;
		max-width: 900px;
		}
		.container-narrow > hr {
		margin: 30px 0;
		}
		/* Main message and sign up button */
		.jumbotron {
		margin: 60px 0;
		text-align: center;
		}
		.jumbotron h1 {
		font-size: 72px;
		line-height: 1;
		}
		.jumbotron .btn {
		font-size: 21px;
		padding: 14px 24px;
		}
		.select {
		width: 300px;
		}




	.container-narrow
		.jumbotron
			h1.page-title Pick analyse tools
			p.lead
				| Click on the input field below to search analyse tools, multiple selections possible..
			br
			div
				select#toolSelect.select(multiple='multiple')
					- each tool in toolsList
						option(value= tool.id)= tool.toolName
			br
			br
			.toolsAccordion#accordion
			br
			div
				button.btn.btn-large.btn-primary#startButton Start Analyse &nbsp; &nbsp;
					i.icon-play.icon-white
