extends layout


block content

	link(rel='stylesheet', href='stylesheets/accordionStyle.css')
	script(src='libs/jquery-ui-1.10.1.min.js')
	script(src='javascript/analyseresults.js')		

	//if lte IE 8
		script(type='text/javascript', src='libs/mootools.js')
		script(type='text/javascript', src='libs/selectivizr.js')


	style(type='text/css')
		
		/* Custom container */
		.container-narrow {
		margin: 0 auto;
		max-width: 900px;
		}
		.container-narrow > hr {
		margin: 30px 0;
		}
		/* Main message and sign up button */
		.jumbotron {
		margin: 60px 0;
		text-align: center;
		}
		.jumbotron h1 {
		font-size: 72px;
		line-height: 1;
		}
		.jumbotron .btn {
		font-size: 21px;
		padding: 14px 24px;
		}
		.select {
		width: 300px;
		}




	.container-narrow
		//- this is NOT an accordion, but it uses the CSS style of the accordion
